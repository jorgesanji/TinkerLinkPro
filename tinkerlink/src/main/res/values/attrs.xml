        </attr>
        <attr name="menuItemTitle" format="string" />
        <attr name="menuItemTitleSize" format="dimension" />
        <attr name="menuItemTitleColor" format="color" />
        <attr name="menuItemImageResource" format="reference" />
        <attr name="menuItemBackgroundTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TLMenuButton">
        <attr name="menuButtonStateExpandedImageResource" format="reference" />
        <attr name="menuButtonImageResource" format="reference" />
        <attr name="menuButtonBackgroundTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TLUserView">
        <attr name="userTitle" format="string" />
        <attr name="userTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
        <attr name="userTitleSize" format="dimension" />
        <attr name="userTitleColor" format="color" />

        <attr name="userSubTitle" format="string" />
        <attr name="userSubTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
        <attr name="userSubTitleSize" format="dimension" />
        <attr name="userSubTitleColor" format="color" />
        <attr name="userOptions" format="boolean" />
        <attr name="userBadge" format="boolean" />
        <attr name="userIcon" format="reference" />

    </declare-styleable>

    <declare-styleable name="TLActionButton">
        <attr name="actionIcon" format="reference" />
        <attr name="actionTitle" format="string" />
        <attr name="actionUpdateStatus" format="boolean" />
        <attr name="actionTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="TLStackButton">
