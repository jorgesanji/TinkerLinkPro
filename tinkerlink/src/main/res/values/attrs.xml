        <attr name="stackSubTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="TLNetworkConnectionView">
        <attr name="colorLine" format="reference" />
        <attr name="strokeWidth" format="float" />
        <attr name="bottomMarginToDraw" format="dimension" />
        <attr name="connectionEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TLRangeView">
        <attr name="absoluteMinValue" format="integer|float" />
        <attr name="absoluteMaxValue" format="integer|float" />
        <attr name="singleThumb" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TLRowView">
        <attr name="rowTitle" format="string" />
        <attr name="rowSubTitle" format="string" />
    </declare-styleable>

</resources>