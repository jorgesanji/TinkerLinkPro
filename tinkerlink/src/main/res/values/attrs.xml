<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- APP FONTS

    <flag name="Regular" value="0" />
    <flag name="Bold" value="1" />
    <flag name="Light" value="2" />
    <flag name="SemiBold" value="3" />

    /-->

    <declare-styleable name="TLImageView">
        <attr name="imageError" format="reference" />
        <attr name="imageEmptyUri" format="reference" />
        <attr name="imageRounded" format="boolean" />
        <attr name="imageWithBorder" format="boolean" />
        <attr name="imageType" format="integer">
            <flag name="Default" value="0" />
            <flag name="User" value="1" />
            <flag name="UpdateProfile" value="2" />
            <flag name="None" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TLViewPagerIndicator">
        <attr name="numDots" format="integer" />
        <attr name="imageUnSelectedDot" format="reference" />
        <attr name="imageSelectedDot" format="reference" />
        <attr name="currentSelected" format="integer" />
        <attr name="sizeDot" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TLTextView">
        <attr name="fontName" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
        <attr name="underLineColor" format="color" />
        <attr name="underLineText" format="string" />
        <attr name="hasMessageStyle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TLEditText">
        <attr name="fontNameEdit" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TLButton">
        <attr name="fontNameButton" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TLViewPager">
        <attr name="scrollDuration" format="float" />
        <attr name="disableSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TLRecyclerView">
        <attr name="factorVelocity" format="float" />
    </declare-styleable>

    <declare-styleable name="TLSelectorForm">
        <attr name="text" format="string" />
        <attr name="textColorForm" format="color" />
        <attr name="textSide" format="integer">
            <flag name="right" value="0" />
            <flag name="left" value="1" />
            <flag name="center" value="2" />
        </attr>
        <attr name="decoratorImage" format="reference" />
        <attr name="decoratorVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TLSelectorGridView">
        <attr name="textTitle" format="string" />
        <attr name="subTitleText" format="string" />
    </declare-styleable>

    <declare-styleable name="TLCardField">
        <attr name="TitleField" format="string" />
        <attr name="subTitleField" format="string" />
    </declare-styleable>

    <declare-styleable name="TLTabItem">
        <attr name="iconItem" format="reference" />
        <attr name="textItem" format="string" />
        <attr name="textItemColor" format="color" />
        <attr name="textItemSize" format="dimension" />
        <attr name="textItemFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TLSettingsField">
        <attr name="titleItem" format="string" />
        <attr name="subTitleItem" format="string" />
        <attr name="subTitleHintItem" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="subTitleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="subTitleColor" format="color" />

        <attr name="settingType" format="integer">
            <flag name="Type_Text" value="0" />
            <flag name="Type_Phone" value="1" />
            <flag name="Type_Password" value="2" />
            <flag name="Type_Date" value="3" />
            <flag name="Type_Mail" value="4" />
        </attr>

        <attr name="titleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>

        <attr name="subTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="TLSwitch">
        <attr name="fontSwitchName" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MenuItem">
