<resources>

    <!-- ACTIVITIES STYLE-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ThemeToolbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- Tool bar background -->
        <item name="android:background">@android:color/transparent</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimary">@color/tinkercolor</item>-->
        <item name="colorPrimaryDark">@color/tinkercolor</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>

    </style>

    <!-- Popup style-->

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black_opaque</item>
    </style>

    <style name="ActivityTransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- remove status bar-->
        <!--<item name="android:windowFullscreen">true</item>  -->
        <!-- it that is true add left and rigth margin-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="ProfileThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- Tool bar background -->
        <!--<item name="android:background">@color/tinkercolor</item>-->
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="ThemeToolbarCreateCardStyle" parent="AppTheme">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- buttons text color-->
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ThemeToolbarCreateRecommendationStyle" parent="AppTheme">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- WIDGET STYLE-->

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black_opaque</item>
        <item name="android:textColorSecondary">@color/black_opaque</item>
        <item name="android:divider">@color/gray_color</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- title encapsulating main part (backgroud) of custom alertdialog -->
        <!--<item name="android:windowFrame">@null</item>-->
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowIsFloating">true</item>
        <!-- float the window so it does not fill the screen -->
        <item name="android:windowNoTitle">true</item>
        <!-- remove the title bar we make our own-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!-- remove the shadow from under the title bar -->
    </style>

    <style name="SignButtonStyle">
        <item name="android:layout_width">@dimen/view_super_big_width</item>
        <item name="android:layout_height">@dimen/view_min_size_sing</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="fontName">Regular</item>
    </style>


    <style name="buttonsDialogStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:background">@drawable/button_chat_button_states</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="SearchTheme" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/black_opaque</item>
        <item name="colorControlActivated">@color/tinkercolor</item>
        <item name="colorControlHighlight">@color/tinkercolor</item>
    </style>

    <style name="SearchStyle">
        <item name="android:theme">@style/SearchTheme</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_opaque</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menuItemTitleSize">@dimen/text_size_tiny</item>
        <item name="menuItemTitleFont">SemiBold</item>
    </style>

    <style name="ContactThumbStyle">
        <item name="android:layout_width">@dimen/thumb_size_tiny</item>
        <item name="android:layout_height">@dimen/thumb_size_tiny</item>
        <item name="android:padding">@dimen/padding_content_super_tiny</item>
        <item name="android:src">@mipmap/newsfeed_avatar_hombre</item>
        <item name="android:background">@drawable/background_contacts</item>
        <item name="imageType">User</item>
    </style>

    <!-- Text Edit style -->

    <style name="EdiTextAppTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/tinkercolor</item>
        <item name="colorControlHighlight">@color/tinkercolor</item>
    </style>

    <style name="EditTextAppStyle">
        <item name="android:theme">@style/EdiTextAppTheme</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="EditFormStyle" parent="EditTextAppStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:textColorHint">@color/gray_30</item>
        <item name="fontNameEdit">Regular</item>
    </style>

    <style name="EditFormMultilineStyle" parent="EditFormStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">left|top</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="EdiTextChatStyle" parent="EditTextAppStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/chat_user_placeholder</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:maxLines">6</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditMultilineStyle" parent="EditTextAppStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">left|top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EdiTextStyle" parent="EditTextAppStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EdiTextShare" parent="EditTextAppStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EdiTextCodeStyle" parent="EditTextAppStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DialogSelectionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/list_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tinkercolor</item>
        <item name="fontNameButton">Bold</item>
    </style>

    <style name="TLActionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_default_states_bgwhite</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>


    <style name="NetWorkSectionsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="NetWorkTinkerSectionsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="NetworkImageThumbStyle">
        <item name="android:layout_width">@dimen/view_network_thumb</item>
        <item name="android:layout_height">@dimen/view_network_thumb</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="imageRounded">true</item>
        <item name="imageWithBorder">true</item>
        <item name="imageType">User</item>
        <item name="android:src">@mipmap/newsfeed_avatar_hombre</item>
    </style>

    <style name="NetworkNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="NetworkConnectionStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="bottomMarginToDraw">50dp</item>
        <item name="colorLine">@color/gray</item>
        <item name="strokeWidth">5.0</item>
    </style>

    <style name="NetworkTinkerLinkCardsStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="NetworkFriendContactStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="NetworkLoaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_default_states</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:text">@string/network_categories_loader</item>
        <item name="fontName">Bold</item>
    </style>

    <style name="NotificationTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="UserProfileTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="MessagesTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Bold</item>
    </style>

    <!-- TAB LAYOUT  -->


    <style name="TabProfileStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/black_opaque_30</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Button">
        <!--<item name="android:textSize">14sp</item>-->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TEXT VIEWS -->

    <style name="TextViewLoginSecctionsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="TextViewStudyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="TextViewConfigurationtyle">
        <item name="android:background">@drawable/button_default_states</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_max_height_big</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Regular</item>
    </style>

    <style name="ItemSettingsNotificationStyle">
        <item name="android:track">@drawable/switch_settings_track_states</item>
        <item name="android:thumb">@drawable/switch_settings_thumb_states</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:switchMinWidth">50dp</item>
    </style>


</resources>
