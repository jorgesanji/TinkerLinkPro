<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ThemeToolbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- Tool bar background -->
        <item name="android:background">@android:color/transparent</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimary">@color/tinkercolor</item>-->
        <item name="colorPrimaryDark">@color/tinkercolor</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/black_app</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>

    </style>

    <style name="ActivityTransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- remove status bar-->
        <!--<item name="android:windowFullscreen">true</item>  -->
        <!-- it that is true add left and rigth margin-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="ProfileThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- Tool bar background -->
        <!--<item name="android:background">@color/tinkercolor</item>-->
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>


    <style name="EditStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_title_edit_size</item>
    </style>

    <style name="LogButtonStyle">
        <item name="android:background">@drawable/button_tutorial_states</item>
        <item name="android:textColor">@color/tinkercolor</item>
        <item name="android:textSize">@dimen/tutorial_size_button</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>

    <style name="SignButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_sign_states</item>
        <item name="android:textColor">@color/tinkercolor</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="fontName">Bold</item>
    </style>

    <style name="titleTutorialStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tutorial_title_size</item>
    </style>

    <style name="subTitleTutorialStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tutorial_subtitle_size</item>
    </style>

    <style name="loginTitleStyle">
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:textSize">@dimen/sign_size_title</item>
    </style>

    <style name="loginPolicyStyle">
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:textSize">@dimen/sign_size_policy</item>
    </style>

    <style name="loginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_login_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontNameButton">Bold</item>
        <item name="android:layout_alignParentBottom">true</item>
        "
    </style>

    <style name="facebookButtonStyle">
        <item name="android:background">@drawable/rounded_rectangle_blue_fb</item>
        <item name="android:drawableLeft">@mipmap/login_facebooklogo</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/registration_connect_with_facebook</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="GenereButtonStyle">
        <item name="android:textColor">@drawable/text_genere_states</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_genere_states</item>
        <item name="android:textSize">@dimen/gener_button_size</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black_opaque</item>
        <item name="android:textColorSecondary">@color/black_opaque</item>
        <item name="android:divider">@color/gray_color</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:textColor">@color/tinkercolor</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- title encapsulating main part (backgroud) of custom alertdialog -->
        <!--<item name="android:windowFrame">@null</item>-->
        <!-- turn off any drawable used to draw a frame on the window -->
        <!--<item name="android:windowBackground">@null</item>-->
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowIsFloating">true</item>
        <!-- float the window so it does not fill the screen -->
        <item name="android:windowNoTitle">true</item>
        <!-- remove the title bar we make our own-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!-- remove the shadow from under the title bar -->
    </style>


    <style name="SearchTheme" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/black_opaque</item>
        <item name="colorControlActivated">@color/tinkercolor</item>
        <item name="colorControlHighlight">@color/tinkercolor</item>
    </style>

    <style name="SearchStyle">
        <item name="android:theme">@style/SearchTheme</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_opaque</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <!-- NEWS FEED CARDS -->

    <style name="SharedStatus">
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:textSize">@dimen/news_feed_shared_name_size</item>
    </style>

    <style name="SharedStatusTime">
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:textSize">@dimen/news_feed_shared_time_size</item>
    </style>

    <!-- Create Cards -->

    <style name="createSytleFormTextTitle">
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:textSize">@dimen/create_title_size</item>
    </style>

    <style name="createSytleFormText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/create_tiny_size</item>
    </style>

    <!-- Custom Dialog buttons-->

    <style name="buttonsDialogStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:background">@drawable/button_chat_button_states</item>
        <item name="fontName">Bold</item>
    </style>

    <!-- Popup style-->

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black_opaque</item>
    </style>

    <style name="TabProfileStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/black_opaque_30</item>
        <!--<item name="tabTextAppearance">@style/TabTextAppearance</item>-->
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:background">@color/tinkercolor</item>
        <item name="tabSelectedTextColor">@color/tinkercolor_30</item>
        <item name="tabTextColor">@color/white</item>
        <!--<item name="tabTextAppearance">@style/TabTextAppearance</item>-->
    </style>

    <style name="TabTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MessageEmptyStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tinkercolor</item>
    </style>

    <style name="NumTinkerLinkerStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">7</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">72dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditFormFieldStyles">
        <item name="android:background">@drawable/button_chat_button_states</item>
        <item name="android:paddingLeft">@dimen/create_tiny_margin</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/tinkercolor</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/tinkercolor</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemTitleSettingsStyle">
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemSubTitleSettingsStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray_30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemSettingsStyle">
        <item name="android:paddingBottom">@dimen/padding_content_tiny</item>
        <item name="android:paddingTop">@dimen/padding_content_tiny</item>
        <item name="android:paddingLeft">@dimen/padding_content_big</item>
        <item name="android:paddingRight">@dimen/padding_content_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_item</item>
        <item name="subTitleFont">Regular</item>
        <item name="subTitleSize">@dimen/text_size_mediun</item>
        <item name="subTitleColor">@color/black</item>
        <item name="titleFont">Regular</item>
        <item name="titleSize">@dimen/text_size_small</item>
        <item name="titleColor">@color/gray_30</item>
    </style>

    <style name="ItemSettingsNotificationStyle" parent="ItemSettingsStyle">
        <item name="android:track">@drawable/switch_settings_track_states</item>
        <item name="android:thumb">@drawable/switch_settings_thumb_states</item>
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:textSize">14sp</item>
        <item name="android:switchMinWidth">50dp</item>
    </style>

    <style name="ItemSettingsSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_mediun</item>
        <item name="android:layout_marginRight">@dimen/margin_mediun</item>
    </style>

    <style name="ItemSettingsSectionsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_mediun</item>
        <item name="android:layout_marginRight">@dimen/margin_mediun</item>
    </style>

    <style name="ItemSettingsDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="SettingsSectionStyle">
        <item name="android:background">@drawable/list_states</item>
        <item name="android:layout_height">@dimen/settings_height_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_content_tiny</item>
        <item name="android:paddingTop">@dimen/padding_content_tiny</item>
        <item name="android:paddingLeft">@dimen/padding_content_big</item>
        <item name="android:paddingRight">@dimen/padding_content_big</item>
    </style>

    <style name="BadgeStyle">
        <item name="android:background">@drawable/menu_item_badge_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginRight">@dimen/menu_badge_rightmargin</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ProfileSectionsStyle">
        <item name="android:textColor">@color/black_opaque</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="fontName">Light</item>
    </style>

    <style name="NewBadgeStyle">
        <item name="android:background">@drawable/menu_item_badge_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_super_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_content_super_tiny</item>
        <item name="android:paddingTop">@dimen/padding_content_super_tiny</item>
        <item name="android:paddingLeft">@dimen/padding_content_small</item>
        <item name="android:paddingRight">@dimen/padding_content_small</item>
        <item name="android:maxWidth">@dimen/view_max_width_mediun</item>
        <item name="menuItemTitleFont">Bold</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menuItemTitleSize">@dimen/text_size_tiny</item>
        <item name="menuItemTitleFont">SemiBold</item>
    </style>

    <style name="ContactThumbStyle">
        <item name="android:layout_width">@dimen/thumb_size_tiny</item>
        <item name="android:layout_height">@dimen/thumb_size_tiny</item>
        <item name="android:padding">@dimen/padding_content_super_tiny</item>
        <item name="android:src">@mipmap/newsfeed_avatar_hombre</item>
        <item name="android:background">@drawable/background_contacts</item>
        <item name="imageType">User</item>
    </style>

    <!-- Text Edit style -->

    <style name="EdiTextAppTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray_color</item>
        <item name="colorControlActivated">@color/tinkercolor</item>
        <item name="colorControlHighlight">@color/tinkercolor</item>
    </style>

    <style name="EditTextAppStyle">
        <item name="android:theme">@style/EdiTextAppTheme</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_30</item>
    </style>

    <style name="createEditSytleFormText" parent="EditTextAppStyle">
        <item name="android:textSize">@dimen/create_tiny_size</item>
    </style>

    <style name="EdiTextChatStyle" parent="EditTextAppStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/chat_user_placeholder</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:maxLines">6</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditMultilineStyle" parent="EditTextAppStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EdiTextStyle" parent="EditTextAppStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EdiTextShare" parent="EditTextAppStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EdiTextCodeStyle" parent="EditTextAppStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DialogSelectionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/list_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tinkercolor</item>
        <item name="fontNameButton">Bold</item>
    </style>

    <style name="TLActionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/list_states</item>
    </style>

</resources>
