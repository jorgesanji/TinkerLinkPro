<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_max_height"
    android:paddingBottom="@dimen/padding_content_super_tiny"
    android:paddingTop="@dimen/padding_content_super_tiny">

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/zapatero" />

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/cardGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_gradient_profile" />

    <LinearLayout
        android:id="@+id/containerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/titleCategory"
            style="@style/Text_14_White_Regular_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_plus_big"
            android:layout_marginRight="@dimen/margin_plus_big"
            android:layout_marginTop="@dimen/margin_small" />

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:id="@+id/dropDownCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_mediun"
            android:src="@mipmap/ic_expand_more_dark" />

    </LinearLayout>

    <View
        android:id="@+id/handlerExpand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_default_states" />

</RelativeLayout>