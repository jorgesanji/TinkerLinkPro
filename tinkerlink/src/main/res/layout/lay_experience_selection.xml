<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/TextViewLoginSecctionsStyle"
            android:layout_marginTop="@dimen/margin_mediun"
            android:text="@string/create_card_experience" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/Text_16_Black_Light_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/create_card_experience_default" />

        <com.cronosgroup.tinkerlink.view.customviews.TLRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleThumb="true" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/TextViewLoginSecctionsStyle"
            android:layout_marginTop="@dimen/margin_mediun"
            android:text="@string/create_card_budget_title" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/Text_16_Black_Regular_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/create_card_budget_select_range" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Light_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/create_card_budget_range" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Light_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/create_card_budget_range" />

        </LinearLayout>


        <com.cronosgroup.tinkerlink.view.customviews.TLRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_plus_big"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                style="@style/CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="@string/create_card_experience_agree" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>