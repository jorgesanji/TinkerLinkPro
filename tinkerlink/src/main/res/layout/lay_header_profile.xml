<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/white">

    <include
        layout="@layout/lay_header_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_plus_plus_biggest" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/titleWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:gravity="center"
        android:text="@string/sign_register_user_welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_mediun" />

    <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
        android:id="@+id/profileUserWallImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleWelcome"
        android:layout_marginRight="@dimen/margin_plus_big"
        android:background="@drawable/button_default_states"
        android:src="@mipmap/ic_add_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/titleCreateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="center"
            android:text="@string/sign_register_user_create_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediun" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mediun">

            <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
                android:id="@+id/userImage"
                android:layout_width="@dimen/view_size_user"
                android:layout_height="@dimen/view_size_user" />

            <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
                android:id="@+id/profileUserImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_default_states"
                android:src="@mipmap/ic_add_photo" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
