<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <include
            layout="@layout/lay_header_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_plus_biggest" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="center"
            android:text="@string/tutorial_recomendation_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediun" />

        <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
            android:layout_width="@dimen/view_max_height_big"
            android:layout_height="@dimen/view_max_height_big"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:gravity="center"
        android:text="@string/tutorial_recomendation_job"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        app:fontName="Regular" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/tutorial_recomendation_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_mediun"
        app:fontName="Bold" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:gravity="center"
        android:text="@string/tutorial_recomendation_city"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_tiny"
        app:fontName="Regular" />

    <include
        android:id="@+id/containerRecommendation"
        layout="@layout/lay_number_recommendations"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_big" />


</LinearLayout>