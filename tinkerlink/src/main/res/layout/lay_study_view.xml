<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/profile_edit_add_study"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:fontName="Regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/gray_30" />

    <include
        layout="@layout/lay_study_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <include
        layout="@layout/lay_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>