<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_mediun"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/lay_title_header" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/confirmMesssage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mediun"
        android:layout_marginTop="@dimen/margin_big"
        android:text="message"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_mediun"
        app:fontName="Regular" />

    <include
        layout="@layout/lay_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_plus_big" />


</LinearLayout>