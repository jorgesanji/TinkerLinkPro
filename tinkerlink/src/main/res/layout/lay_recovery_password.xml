<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/TextViewLoginSecctionsStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_mediun"
            android:gravity="left"
            android:text="@string/configuration_create_title" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            style="@style/TextViewLoginSecctionsStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_mediun"
            android:gravity="left"
            android:text="@string/configuration_recovery_insert_email_or_phone"
            app:fontName="Light" />


        <com.cronosgroup.tinkerlink.view.customviews.TLEditText
            android:id="@+id/currentPassword"
            style="@style/EditFormStyle"
            android:layout_marginTop="@dimen/margin_plus_biggest"
            android:hint="@string/configuration_recovery_insert_email_or_phone"
            android:inputType="text"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLButton
        android:id="@+id/signButton"
        style="@style/SignButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_plus_plus_biggest"
        android:text="@string/configuration_recovery_title" />


</RelativeLayout>