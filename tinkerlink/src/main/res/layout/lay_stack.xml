<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/backgroundFadeIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <View
        android:id="@+id/backgroundFadeOut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            style="@style/TabProfileStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <com.cronosgroup.tinkerlink.view.customviews.TLViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
        android:id="@+id/createCardButton"
        style="@style/FloatActionButtonStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_tinker_linker_gradient"
        android:src="@mipmap/floating_add" />

</RelativeLayout>

