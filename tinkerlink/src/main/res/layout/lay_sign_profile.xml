<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <include
            layout="@layout/lay_header_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_plus_biggest" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/titleWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="center"
            android:text="@string/sign_register_user_welcome"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediun" />

        <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
            android:id="@+id/profileUserWallImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/titleWelcome"
            android:layout_marginRight="@dimen/margin_plus_big"
            android:background="@drawable/button_default_states"
            android:src="@mipmap/ic_image_photo_camera" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:gravity="center"
                android:text="@string/sign_register_user_create_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_mediun" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
                    android:layout_width="@dimen/view_max_height_big"
                    android:layout_height="@dimen/view_max_height_big"
                    android:layout_marginTop="@dimen/margin_mediun" />

                <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
                    android:id="@+id/profileUserImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_default_states"
                    android:src="@mipmap/ic_image_photo_camera" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/TextViewLoginSecctionsStyle"
                android:layout_width="match_parent"
                android:gravity="left"
                android:text="@string/sign_select_country" />

            <LinearLayout
                android:id="@+id/selectorCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/selectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                        android:id="@+id/idCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:hint="@string/sign_register_user_select_job"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_30"
                        android:textSize="@dimen/text_size_mediun"
                        app:fontName="Regular" />

                    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_action_navigation_arrow_drop_down" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_mini"
                    android:background="@color/black" />

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/TextViewLoginSecctionsStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_plus_biggest"
                    android:gravity="left"
                    android:text="@string/sign_register_user_description" />

                <com.cronosgroup.tinkerlink.view.customviews.TLEditText
                    android:id="@+id/passwordUser"
                    style="@style/EditFormMultilineStyle"
                    android:hint="@string/sign_register_user_description_hint" />

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/TextViewLoginSecctionsStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_plus_biggest"
                    android:gravity="left"
                    android:text="@string/sign_register_user_studies" />

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    android:id="@+id/addStudyOrCourse"
                    style="@style/TextViewLoginSecctionsStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_big_height"
                    android:layout_marginTop="@dimen/margin_mediun"
                    android:background="@drawable/button_default_states"
                    android:gravity="left|center_vertical"
                    android:text="@string/sign_register_user_studies_add"
                    app:fontName="Bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>