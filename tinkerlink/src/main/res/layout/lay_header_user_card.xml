<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp">

    <include layout="@layout/lay_header_card" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:id="@+id/userCardImage"
            android:layout_width="@dimen/view_size_user"
            android:layout_height="@dimen/view_size_user"
            android:scaleType="centerCrop"
            android:src="@mipmap/newsfeed_avatar_hombre"
            app:imageRounded="true"
            app:imageType="User"
            app:imageWithBorder="true" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediun" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_super_tiny" />

    </LinearLayout>

</RelativeLayout>
