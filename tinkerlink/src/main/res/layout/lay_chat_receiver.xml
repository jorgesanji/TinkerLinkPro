<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:background="@drawable/background_new_receiver"
        android:gravity="center_vertical"
        android:minWidth="@dimen/view_big_width"
        android:orientation="vertical"
        android:padding="5dp">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            app:fontName="Regular" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/gray_30"
            android:textSize="@dimen/text_size_super_tiny"
            app:fontName="Light" />

    </LinearLayout>

</LinearLayout>