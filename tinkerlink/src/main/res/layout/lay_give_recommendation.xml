<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mediun"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/thumb_size_mediun"
            android:layout_height="@dimen/thumb_size_mediun"
            app:imageRounded="true" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/recommendationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="@string/profile_recommendations_write_recommendation_by"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_mediun"
            app:fontName="Regular" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLEditText
        android:id="@+id/recommendationText"
        style="@style/EditFormMultilineStyle"
        android:layout_margin="@dimen/margin_mediun"
        android:ellipsize="end"
        android:hint="@string/profile_recommendations_write_recommendation_by_hint"
        android:maxLines="10"
        android:minHeight="@dimen/view_max_height_mediun" />

</LinearLayout>