<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_default_states"
    android:orientation="vertical">

    <View
        android:id="@+id/backgrondChatItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <com.cronosgroup.tinkerlink.view.customviews.TLUserView
        android:id="@+id/userChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:userSubTitleColor="@color/black"
        app:userSubTitleFont="Regular"
        app:userSubTitleSize="@dimen/text_size_small"
        app:userTitleColor="@color/black"
        app:userTitleFont="Bold"
        app:userTitleSize="@dimen/text_size_mediun" />

</RelativeLayout>