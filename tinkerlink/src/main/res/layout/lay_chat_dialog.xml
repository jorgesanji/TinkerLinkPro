<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/contactWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/share_contact_with"
            android:textColor="@color/black_opaque"
            android:textSize="16sp"
            app:fontName="Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/news_feed_detail_info" />

        <com.cronosgroup.tinkerlink.view.customviews.TLEditText
            android:id="@+id/textChat"
            style="@style/EdiTextShare"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="top|left"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:lines="6"
            android:padding="20dp"
            android:scrollHorizontally="false"
            app:fontNameEdit="Regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/news_feed_detail_info" />

        <include
            layout="@layout/lay_dialog_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>