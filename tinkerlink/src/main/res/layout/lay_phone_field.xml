<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/messageError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.cronosgroup.tinkerlink.view.customviews.TLEditText
            style="@style/EditPhoneFormStyle"
            android:background="@drawable/background_edit_text"
            android:inputType="phone"
            android:tag="@string/com_lamudi_phonefield_edittext" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"
            android:tag="@string/com_lamudi_phonefield_flag_spinner" />

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:id="@+id/showCountries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:scaleType="center"
            android:src="@mipmap/ic_expand_more" />

    </LinearLayout>

</RelativeLayout>