<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/iconTinker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_plus_big"
        android:src="@mipmap/floating_new_buscotinker" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/titleTinker"
        style="@style/Text_18_Gray_SemiBold_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mediun"
        android:gravity="center"
        android:text="@string/tutorial_tinker_title" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/titleTinker"
        android:layout_margin="@dimen/margin_plus_biggest"
        android:padding="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zapatero" />

        <View
            android:id="@+id/backgroundCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tinkercolor_50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
                android:id="@+id/typeCardUser"
                android:layout_width="@dimen/view_max_height_big"
                android:layout_height="@dimen/view_max_height_big"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/typeCard"
                style="@style/Text_11_White_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/detail_card_me" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/jobCard"
                style="@style/Text_20_White_SemiBold_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_tinker_job" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>