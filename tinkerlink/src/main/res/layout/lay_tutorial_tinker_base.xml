<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/iconTinker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_plus_big"
        android:src="@mipmap/newsfeed_tinkercard_net" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/titleTinker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mediun"
        android:gravity="center"
        android:text="@string/tutorial_tinker_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big"
        app:fontName="Regular" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/titleTinker"
        android:layout_margin="@dimen/margin_plus_biggest"
        android:layout_marginTop="@dimen/margin_plus_biggest">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zapatero" />

        <View
            android:id="@+id/backgroundCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tinkercolor_50" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/view_elevation" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
                android:id="@+id/typeCardUser"
                android:layout_width="@dimen/view_max_height_big"
                android:layout_height="@dimen/view_max_height_big"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/typeCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_me"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_mediun"
                app:fontName="Regular" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/jobCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_tinker_job"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                app:fontName="Regular" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>