<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mediun"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_mediun">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/titleMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_mediun"
                app:fontName="Bold" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/descriptionMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mediun"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="message"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_mediun"
                app:fontName="Regular" />

            <com.cronosgroup.tinkerlink.view.customviews.TLButton
                android:id="@+id/Okbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:background="@drawable/button_default_states"
                android:text="@string/dialog_message_ok_button"
                android:textColor="@color/black" />

        </LinearLayout>

        <com.cronosgroup.tinkerlink.view.customviews.TLImageRoundBorder
            android:id="@+id/iconMessage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</LinearLayout>