<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/lay_welcome_page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_big"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLButton
            android:id="@+id/logButton"
            style="@style/SignButtonStyle"
            android:background="@drawable/button_sign_states"
            android:text="@string/tutorial_login" />

        <com.cronosgroup.tinkerlink.view.customviews.TLButton
            android:id="@+id/signButton"
            style="@style/SignButtonStyle"
            android:layout_marginTop="@dimen/margin_mediun"
            android:background="@drawable/button_sign_states"
            android:text="@string/tutorial_register" />

    </LinearLayout>

</RelativeLayout>