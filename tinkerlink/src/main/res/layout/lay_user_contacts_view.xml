<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_max_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/view_max_height"
        android:layout_height="@dimen/view_max_height"
        android:layout_margin="@dimen/margin_small"
        app:imageRounded="true"
        app:imageType="User" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_mediun"
            app:fontName="Regular" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/userJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="profession"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            app:fontName="Regular" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLCommonContactsView
        android:id="@+id/contactsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:showStatusContact="false" />

    <LinearLayout
        android:id="@+id/containerOptions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/undoText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="text_option"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            app:fontName="Regular" />

        <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
            android:id="@+id/optionsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_tiny"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_action_navigation_more_vert" />
    </LinearLayout>

</LinearLayout>