<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        style="@style/TabProfileStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cronosgroup.tinkerlink.view.customviews.TLViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/introScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_plus_big">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/contacts_intro_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big"
                app:fontName="Regular" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mediun"
                android:gravity="center_horizontal"
                android:text="@string/contacts_intro_message"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_mediun"
                app:fontName="Light" />

            <com.cronosgroup.tinkerlink.view.customviews.TLButton
                android:id="@+id/continueButton"
                style="@style/SignButtonStyle"
                android:layout_marginTop="@dimen/margin_plus_plus_biggest"
                android:text="@string/contacts_continue" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>