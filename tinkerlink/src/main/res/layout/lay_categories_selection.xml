<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_big">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:orientation="vertical">

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/TextViewLoginSecctionsStyle"
                    android:layout_marginTop="@dimen/margin_mediun"
                    android:text="@string/create_card_ubication" />

                <LinearLayout
                    android:id="@+id/selectGeoPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                            android:id="@+id/idCountry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:hint="@string/create_card_country_hint"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_30"
                            android:textSize="@dimen/text_size_mediun"
                            app:fontName="Regular" />

                        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_expand_more" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_mini"
                        android:background="@color/black" />

                </LinearLayout>

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/TextViewLoginSecctionsStyle"
                    android:layout_marginTop="@dimen/margin_plus_plus_plus_biggest"
                    android:text="@string/create_card_especify_search" />

                <LinearLayout
                    android:id="@+id/selectorCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                            android:id="@+id/idCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:hint="@string/create_card_occupation_hint"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_30"
                            android:textSize="@dimen/text_size_mediun"
                            app:fontName="Regular" />

                        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_expand_more" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_mini"
                        android:background="@color/black" />

                </LinearLayout>

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_plus_biggest"
                    android:gravity="left"
                    android:text="@string/create_card_subcategory_selected"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_mediun" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_big">

                <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_max_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/zapatero" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_max_height"
                    android:background="@color/white_50"
                    />

                <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
                    android:id="@+id/addImageCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_add_photo" />

            </RelativeLayout>

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin_plus_biggest"
                android:gravity="left"
                android:text="@string/create_card_add_images"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_mediun" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin_plus_big">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/background_button_add_image">

                    <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
                        android:id="@+id/addImageCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_add_photo" />
                </FrameLayout>

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/create_card_add_images_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_mediun" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>
    
</LinearLayout>