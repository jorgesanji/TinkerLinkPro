<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mediun"
        android:orientation="horizontal">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:layout_width="@dimen/thumb_size_mediun"
            android:layout_height="@dimen/thumb_size_mediun"
            app:imageRounded="true"
            app:imageType="User"
            app:imageWithBorder="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cronosgroup.tinkerlink.view.customviews.TLEditText
                style="@style/EditFormMultilineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/status_message_hint"
                android:minHeight="200dp"
                android:padding="@dimen/padding_content_tiny" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/lay_separator" />

        <include
            layout="@layout/lay_image_source_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>