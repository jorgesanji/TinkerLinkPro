<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="@dimen/view_elevation"
    android:orientation="vertical"
    android:padding="@dimen/padding_content_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cronosgroup.tinkerlink.view.customviews.TLImageView
            android:id="@+id/userImage"
            app:imageRounded="true"
            android:layout_width="@dimen/thumb_size_mediun"
            android:layout_height="@dimen/thumb_size_mediun" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/recommendationText"
            app:fontName="Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="@string/profile_recommendations_message"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_mediun" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/writteRecommendation"
        app:fontName="Regular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_default_states"
        android:gravity="left|center_vertical"
        android:text="@string/profile_recommendations_create"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_mediun" />

</LinearLayout>