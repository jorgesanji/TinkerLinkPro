<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/view_big_heigth"
        android:layout_height="@dimen/view_big_heigth"
        android:layout_margin="@dimen/margin_mediun"
        app:imageRounded="true"
        app:imageType="User" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_mediun"
            app:fontName="Regular" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            app:fontName="Regular" />

    </LinearLayout>

    <com.cronosgroup.tinkerlink.view.customviews.TLCommonContactsView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:showStatusContact="false" />

    <com.cronosgroup.tinkerlink.view.customviews.TLImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_action_navigation_more_vert" />

</LinearLayout>