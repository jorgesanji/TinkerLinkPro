<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_and_texts_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_mediun"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_mediun">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mediun"
            android:layout_marginRight="@dimen/margin_mediun"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_24_SemiBlack_Regular_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_phone_register_title" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Gray_Regular_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/sign_phone_register_subtitle" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_14_Gray_Regular_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/sign_phone_register_phone_title" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/phoneUser"
                style="@style/Text_20_SemiBlack_Regular_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/verificationContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <com.cronosgroup.tinkerlink.view.customviews.TLPhonefield
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny" />

                <com.cronosgroup.tinkerlink.view.customviews.TLButton
                    android:id="@+id/sendcodebt"
                    style="@style/SignButtonStyle"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="@dimen/margin_mediun"
                    android:text="@string/sign_phone_register_phone_send_code" />

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/Text_14_Gray_Regular_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_plus_big"
                    android:text="@string/sign_phone_register_phone_code_message" />

                <com.cronosgroup.tinkerlink.view.customviews.TLEditTextForm
                    android:id="@+id/codetd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny"
                    app:form_error_message="@string/error_form_code"
                    app:form_hint="@string/sign_phone_register_phone_code_hint"
                    app:form_imputType="text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                        android:id="@+id/retrytv"
                        style="@style/Text_14_Gray_Regular_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_plus_big"
                        android:gravity="right"
                        android:text="@string/sign_phone_register_phone_code_reintent" />

                    <com.cronosgroup.tinkerlink.view.customviews.TLButton
                        android:id="@+id/verifybt"
                        style="@style/SignButtonStyle"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="80dp"
                        android:enabled="false"
                        android:text="@string/sign_phone_register_phone_verify" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/Text_14_Gray_Regular_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/sign_phone_register_phone_code_verify" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_verify_phone" />

                    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                        style="@style/Text_16_SemiBlack_Regular_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:text="@string/sign_phone_register_phone_code_verified" />

                </LinearLayout>

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/Text_14_Gray_Regular_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_big"
                    android:text="@string/sign_phone_register_password_title" />

                <com.cronosgroup.tinkerlink.view.customviews.TLEditTextForm
                    android:id="@+id/passworef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:form_error_message="@string/error_form_password"
                    app:form_hint="@string/sign_phone_register_password_hint"
                    app:form_imputType="password" />

                <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                    style="@style/Text_14_Gray_Regular_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/sign_phone_register_password_repeat" />

                <com.cronosgroup.tinkerlink.view.customviews.TLEditTextForm
                    android:id="@+id/passwordRepeatef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:form_error_message="@string/error_form_password"
                    app:form_hint="@string/sign_phone_register_password_hint"
                    app:form_imputType="password" />

                <com.cronosgroup.tinkerlink.view.customviews.TLButton
                    android:id="@+id/createaccountbt"
                    style="@style/SignButtonStyle"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="@dimen/margin_big"
                    android:text="@string/sign_phone_register_password_create_account" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>