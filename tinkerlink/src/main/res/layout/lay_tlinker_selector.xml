<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/titleTLinker"
        style="@style/Text_25_Gray_Regular_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mediun"
        android:gravity="center"
        android:text="@string/sign_register_title_preferences" />

    <com.cronosgroup.tinkerlink.view.customviews.TLTextView
        android:id="@+id/descriptionTLinker"
        style="@style/Text_14_SemiBlack_Regular_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_mediun"
        android:layout_marginRight="@dimen/margin_mediun"
        android:layout_marginTop="@dimen/margin_mediun"
        android:gravity="center"
        android:text="@string/sign_register_title_tinker" />

    <com.cronosgroup.tinkerlink.view.customviews.TLRecyclerView
        android:id="@+id/categoriesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_mediun" />

</LinearLayout>