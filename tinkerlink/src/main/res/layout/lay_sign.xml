<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLViewPager
            android:id="@+id/signPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:scrollDuration="3" />

        <include
            android:id="@+id/navbar"
            layout="@layout/lay_tag_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/registrationContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="@dimen/view_mediun_elevation"
        android:visibility="visible">

        <fragment
            android:id="@+id/registrationSelectorFragment"
            android:name="com.cronosgroup.tinkerlink.view.sign.adapter.fragments.registerselector.RegisterSelectorFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/lay_register_selector" />

    </FrameLayout>

</RelativeLayout>