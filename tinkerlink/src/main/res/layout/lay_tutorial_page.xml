<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_size_header">

        <include
            layout="@layout/lay_header_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLImageView
                android:id="@+id/imageHeaderTutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/inicio_img_red"
                />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/nameHeaderTutorial"
                style="@style/Text_16_White_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/typeTinkerHeaderTutorial"
                style="@style/Text_16_White_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                android:id="@+id/jobHeaderTutorial"
                style="@style/Text_24_White_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_plus_big"
        android:gravity="left"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/titlePage"
            style="@style/Text_24_SemiBlack_Regular_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/subtitlePage"
            style="@style/Text_16_Gray_Regular_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/descriptionPage"
            style="@style/Text_16_Gray_Regular_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big" />

    </LinearLayout>

</LinearLayout>