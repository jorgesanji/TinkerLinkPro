<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="20dp">

    <View
        android:id="@+id/notificationIndicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/background_tinker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/notificationTitle"
            style="@style/NotificationTextStyle"
            android:maxLines="2"
            android:text="Laura Gomez compartió tu linkercard en el inicio"
            android:textSize="@dimen/text_size_small"
            app:fontName="SemiBold" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/notificationDescription"
            style="@style/NotificationTextStyle"
            android:layout_marginTop="@dimen/margin_tiny"
            android:text="Me gustaría compartir la tinkercard de Laura por que me da la gana" />

        <com.cronosgroup.tinkerlink.view.customviews.TLTextView
            android:id="@+id/notificationTime"
            style="@style/NotificationTextStyle"
            android:layout_marginTop="@dimen/margin_tiny"
            android:text="Hoy 16:20"
            android:textSize="@dimen/text_size_super_tiny"
            app:fontName="Light" />

    </LinearLayout>


</LinearLayout>