<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/zapatero" />

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/cardGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_gradient_profile" />

    <com.cronosgroup.tinkerlink.view.customviews.TLImageView
        android:id="@+id/cardOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/card_shadow_bg" />

</RelativeLayout>
