<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:orientation="vertical">

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/TextViewLoginSecctionsStyle"
                android:layout_marginTop="@dimen/margin_mediun"
                android:text="@string/create_card_experience_title" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Light_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/create_card_tinker_experience_default" />

            <com.cronosgroup.tinkerlink.view.customviews.TLRangeView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleThumb="true" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/TextViewLoginSecctionsStyle"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/create_card_value_job_title" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/create_card_value_tinker_selection_job_mode" />

            <com.cronosgroup.tinkerlink.view.customviews.TLSkillView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLSkillView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLSkillView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLSkillView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mediun"
                android:text="@string/create_card_value_title" />

            <com.cronosgroup.tinkerlink.view.customviews.TLTextView
                style="@style/Text_16_Black_Regular_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/create_card_experience_agree" />

            <com.cronosgroup.tinkerlink.view.customviews.TLRangeView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleThumb="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>