<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="@dimen/view_super_tiny_height"
                android:color="@color/gray_card" />
            <corners
                android:bottomLeftRadius="@dimen/radius_big"
                android:bottomRightRadius="@dimen/view_height_super_tiny"
                android:topLeftRadius="@dimen/radius_big"
                android:topRightRadius="@dimen/view_height_super_tiny" />
        </shape>
    </item>
    <item android:left="@dimen/radius_big">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>


</layer-list>